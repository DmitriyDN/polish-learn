{
  "name": "polish",
  "engines": {
    "node": "16.x"
  },
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "tslint-test": "tslint --config tslint.json '{test,integrationTest}/**/*.ts'",
    "tslint-src": "tslint --project tsconfig.json --config tslint.json 'src/**/*.ts'",
    "lint-src": "eslint -c .eslintrc.js --ext .ts src",
    "lint-test": "eslint -c .eslintrc.js --ext .ts test integrationTest",
    "lint": "yarn lint-src; yarn lint-test",
    "lint-test-fix": "yarn lint-test --fix",
    "lint-src-fix": "yarn lint-src --fix",
    "lint:fix": "yarn lint-src-fix; yarn lint-test-fix",
    "build": "tsc",
    "write-git-hash": "./scripts/write-git-hash",
    "report-build-to-bugsnag": "./scripts/report-build-to-bugsnag",
    "typeorm:clean": "rimraf dist/db/migrations/*",
    "typeorm": "yarn build && ts-node ./node_modules/typeorm/build/package/cli.js --config dist/db/config/ormconfig",
    "gcp-build": "yarn gql-typegen && yarn build",
    "prestart": "yarn build",
    "start": "node .",
    "startmon": "nodemon src/index.ts",
    "debug": "node --inspect=9339 -r ts-node/register src/index.ts",
    "debugmon": "ts-node-dev --inspect=9339 -- src/index.ts",
    "start-prof": "node --prof .",
    "start-inspect": "node --inspect ."
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2"
  },
  "private": true
}
